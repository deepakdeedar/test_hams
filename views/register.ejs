<%- include ('header') %>
<main class="page landing-page">
  <% if (error) { %>
  <div class="alert alert-danger m-5">
    <center>
      <strong><%= message %></strong>
    </center>
  </div>
  <% } %>
  <div class="container p-5 main">
    <div class="row justify-content-center">
      <div class="col-sm-6 col-lg-6">
        <img
          src="images/logo_transparent.png"
          alt="logo_transparent"
          class="card-img-top w-200 d-block"
        />
      </div>
      <div class="col-sm-6 col-lg-6 border">
        <div class="row p-2 border">
          <div class="col-6">
            <p class="hams">Join HAMS</p>
          </div>
          <div class="col-6">
            <span>
              Are you a Doctor?
              <a class="rhere" href="./registerDoctor">Register here</a>
            </span>
          </div>
        </div>
        <br />
        <form action="/register-as-patient" method="post">
          <div class="form-group">
            <label for="name">Name:</label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter Name"
              id="name"
              name="name"
              required
            />
          </div>
          <div class="form-group">
            <label for="email">Email address:</label>
            <input
              type="email"
              class="form-control"
              placeholder="Enter email"
              id="email"
              name="email"
              required
            />
          </div>
          <div class="form-group">
            <label for="phone">Mobile Number:</label>
            <input
              type="text"
              class="form-control"
              placeholder="Enter Mobile Number"
              id="phone"
              name="phone"
              maxlength="10"
              required
            />
          </div>
          <div class="form-group">
            <label for="pwd">Password:</label>
            <input
              type="password"
              class="form-control"
              placeholder="Enter password"
              id="pwd"
              name="password"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Sign Up
          </button>
        </form>
      </div>
    </div>
  </div>
</main>
<%- include('footer') %>
