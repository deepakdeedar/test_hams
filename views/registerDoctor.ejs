<%- include ('header') %>
<br>
<br>
<br> 
    <% if (error) { %>
      <div class="alert alert-danger m-5">
        <center>
          <strong><%= message %></strong>
        </center>
      </div>
    <% } %>
    <div class="container p-5 main">
      <div class="row">
        <div class="col-6">
          <img
            src="images/logo_transparent.png"
            alt="logo_transparent"
            height="500"
            width="500"
          />
        </div>
        <div class="col-6 border">
          <div class="row p-2 border">
            <div class="col-6">
              <p class="hams">Join HAMS</p>
            </div>
            <div class="col-6">
              <span>
                Not a Doctor? 
                <a class="rhere" href="./register">Register here</a>
              </span>
            </div>
          </div>
          <br>
          <form action="/register-as-doctor" method="post">
            <div class="form-group">
              <label for="name">Name:</label>
              <input
                type="text"
                class="form-control"
                placeholder="Enter Name"
                id="name"
                name="name"
              />
            </div>
            <div class="form-group">
              <label for="email">Email address:</label>
              <input
                type="email"
                class="form-control"
                placeholder="Enter email"
                id="email"
                name="email"
              />
            </div>
            <div class="form-group">
              <label for="phone">Mobile Number:</label>
              <input
                type="text"
                class="form-control"
                placeholder="Enter Mobile Number"
                id="phone"
                name="phone"
                maxlength="10"
              />
            </div>
            <div class="form-group">
              <label for="special">Specialization:</label>
              <input
                type="text"
                class="form-control"
                placeholder="Enter Specialization"
                id="special"
                name="special"
              />
            </div>
            <div class="form-group">
              <label for="pwd">Password:</label>
              <input
                type="password"
                class="form-control"
                placeholder="Enter password"
                id="pwd"
                name="password"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
          </form>
        </div>
      </div>
    </div>
  
<%- include('footer') %> 
