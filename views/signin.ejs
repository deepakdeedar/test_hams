<%- include('header') %> 
<br>
<br>
<br>
    <% if (error) { %>
      <div class="alert alert-danger m-5">
        <center>
          <strong><%= message %></strong>
        </center>
      </div>
    <% } %>
    <div class="container p-5 main">
      <div class="row">
        <div class="col-6">
          <img
            src="images/logo_transparent.png"
            alt="logo_transparent"
            height="500"
            width="500"
          />
        </div>
        <div class="col-6">
          <div class="row">
            <div class="col-6">
              <p class="hams">The HAMS</p>
            </div>
            <div class="col-6">
              <span>
                Doctor? 
                <a class="rhere" href="/signinDoctor">Login here</a>
              </span>
            </div>
          </div>
          <br>
          <form action="/signin" method="post">
            <div class="form-group">
              <label for="email">Email address:</label>
              <input
                type="email"
                class="form-control"
                placeholder="Enter email"
                id="email"
                name="email"
                required
              />
            </div>
            <div class="form-group">
              <label for="pwd">Password:</label>
              <input
                type="password"
                class="form-control"
                placeholder="Enter password"
                id="pwd"
                name="password"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Log In</button>
          </form>
          <hr>
          <a href="/register" style="text-decoration: none;"><button type="submit" class="btn btn-success btn-block">Register Here</button></a>
        </div>
      </div>
    </div>
  
<%- include('footer') %> 
